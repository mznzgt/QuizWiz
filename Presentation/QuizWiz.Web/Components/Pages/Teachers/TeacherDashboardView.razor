@page "/teacher/dashboard"
@using QuizWiz.Application.SharedModel;
@using System.Net.Http.Json
@using QuizWiz.Web.Services
@inject ITokenService TokenService
@inject IJwtService JwtService
@inject IOpenAIService OpenAIService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Teacher Dashboard</PageTitle>

<h3>Teacher Dashboard</h3>

<textarea @bind="userInput" placeholder="Enter text here..."></textarea>
<input type="file" @ref="inputFile" />
<button type="button" @onclick="SubmitQuizAsync">Submit</button>
<button type="button" @onclick="LogoutAsync">Logout</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private ElementReference inputFile;
    private string userInput;
    private List<Quiz> quizQuestions;

    private async Task SubmitQuizAsync()
    {
        var token = await TokenService.GetTokenAsync();

        if (string.IsNullOrEmpty(token))
        {
            NavigationManager.NavigateTo("/login");
        };

        var quizResponse = await OpenAIService.GetQuizAsync(userInput, token);
        quizQuestions = quizResponse.Quiz;
    }

    private async Task LogoutAsync()
    {
        await TokenService.ClearTokenAsync();
        NavigationManager.NavigateTo("/");
    }
}